{
  "compilerOptions": {
    "types": [
      "@types/node"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "removeComments": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true
  },
  "extends": "../../../tsconfig.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
